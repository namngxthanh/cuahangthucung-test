@using Cuahangthucung.Models
@using PagedList.Mvc;
@model PagedList.PagedList<Cuahangthucung.Models.THUCUNG>




@{
    ViewBag.Title = "Pet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pet</h2>

<p>
    @Html.ActionLink(" THÊM PET ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaTC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenTC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().AnhBia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NgayCapNhat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().GiaBan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaLoaiTC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaNCC)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                <img src="@Url.Content("~/Image/"+ item.AnhBia) " width="200" height="150"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoaiTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaNCC)
            </td>
            <td>
                @Html.ActionLink("SỬa", "Edit", new { id = item.MaTC }) |
                @Html.ActionLink("Xem chi Tiết", "Details", new { id = item.MaTC }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTC })
            </td>
        </tr>
    }
</table>
Trang @(Model.PageCount < Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
<div class="Menu">
    @Html.PagedListPager(Model, page => Url.Action("Pet", new { page = page }))
</div>
<style>
    .Menu li {
        display: inline;
    }
</style>